<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <ImageView
            android:id="@+id/TodayReportRvDeleteBrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_delete_black_24dp" />

        <TextView
            android:id="@+id/TodayReportRvDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:- " />


        <TextView
            android:id="@+id/TodayReportRvDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TodayReportRvDateTv"
            android:layout_marginTop="5dp"
            android:text="Details:- " />

        <ImageView
            android:id="@+id/TodayReportRvFromIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TodayReportRvDescTv"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/TodayReportRvAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="28dp"
            android:text="300"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>